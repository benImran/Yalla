{% extends "base.html.twig" %}

{% block body %}
        <section class="last-news2">
            <h2>Nos articles</h2>
                <a href="">
                    <article class="news">
                        <span class="date">{{ news.createdAt|localizeddate('full', 'none', app.request.locale) }}</span>
                        <h3>{{ news.title }}</h3>

                        <img src="{{ asset("/uploads/images/articles/#{news.image}") }}" alt="">
                        <p>
                            {{ news.synopsis|raw }}
                        </p>
                    </article>
                </a>
        </section>

      <section class="news">
        <h4>Tous nos articles</h4>

        <div class="news-container">
            <div class="count">
                {{ pagination.getTotalItemCount }} pages
            </div>
            {% for article in pagination %}
                <a href="">
                    <article class="news">
                        <span class="date">{{ article.createdAt|localizeddate('full', 'none', app.request.locale) }}</span>
                        <h3>{{ article.title }}</h3>

                        <img src="{{ asset("/uploads/images/articles/#{article.image}") }}" alt="">
                        <p>
                            {{ article.synopsis|raw }}
                        </p>
                    </article>
                </a>
            {% endfor %}
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>

        </div>
      </section>

    </div>
{% endblock %}
